{
    "manifest_version": 3,
    "name": "Dark Mode",
    "version": 1.0,
    "description": "Toggle dark mode on any website dynamically.",
    "permissions": ["storage", "scripting", "activeTab"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
        }
    },
    "host_permissions": ["<all_urls>"]

}